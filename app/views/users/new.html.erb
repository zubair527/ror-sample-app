<% provide(title: 'Sign Up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |field| %>

        <%= render 'shared/error_messages' %>

        <%= field.label :name %>
        <%= field.text_field :name, class:'form-control' %>

        <%= field.label :email %>
        <%= field.email_field :email, class:'form-control' %>

        <%= field.label :password %>
        <%= field.password_field :password, class:'form-control' %>

        <%= field.label :password_confirmation, 'Confirmation' %>
        <%= field.password_field :password_confirmation, class:'form-control' %>

        <%= field.submit 'Create my account', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

